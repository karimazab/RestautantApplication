<div class="module">
    <div class="module-head">


        <form class="form-horizontal" role="form" ng-submit="GetReport()">
            <h6>From Date :</h6>
            <input style="display:inline;" type="date" ng-model="datefrom"
                   name="From" @*max="{{date | date:'yyyy-MM-dd'}}"*@ />
            <h6>To Date :</h6>
            <input style="display:inline;" type="date" ng-model="dateto"
                   name="To" @*max="{{date | date:'yyyy-MM-dd'}}"*@ />

            <input style="display:inline;" type="submit" value="Get Report" class="btn btn-primary" />

        </form>

    </div>
    <div id="ttest" class="module-body">
        <div class="form-horizontal row-fluid">
            <h2>Restuarnt Report</h2>
            <h4>{{dateout}}</h4>
        </div>
        <div class="form-horizontal row-fluid">
            <div class="span7 pull-left">
                <div class="control-group">
                    <form class="form-horizontal row-fluid pull-right" role="form" ng-submit="addRow2()">
                        <h5>Orders : </h5>
                        @*<div class="span7">*@
                        <table class="table">
                            <tr>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Meals
                                </th>
                                <th>
                                    OrderTotalPrice
                                </th>
                            </tr>
                            <tr ng-repeat="order in Orders.AllOrders">
                                <td>
                                    {{order.Date}}
                                </td>
                                <td>
                                    <table class="table">
                                        <tr>
                                            <th>
                                                Item
                                            </th>
                                            <th>
                                                AddOns
                                            </th>
                                            <th>
                                                Q
                                            </th>
                                            <th>
                                                Price
                                            </th>
                                            <th>
                                                TotalPrice
                                            </th>
                                        </tr>
                                        <tr ng-repeat="order1 in order.AllOrder">
                                            <td>
                                                {{order1.Item}}
                                            </td>
                                            <td>
                                                {{order1.AddOns}}
                                            </td>
                                            <td>
                                                {{order1.Q}}
                                            </td>
                                            <td>
                                                {{order1.Price}}
                                            </td>
                                            <td>
                                                {{order1.TotalPrice}}
                                            </td>
                                        </tr>
                                    </table>
                                    @*{{order.AllOrder}}*@
                                </td>
                                <td>
                                    {{order.OrderTotalPrice}}
                                </td>

                            </tr>
                        </table>
                    </form>
                </div>
            </div>
            <div class="span5">
                <div class="control-group">
                    <h5>Total Number Of Orders : {{Orders.OverAllTotalNumberOfOrders}}</h5>
                </div>
                <div class="control-group">
                    <h5>Total Number Of Meals : {{Orders.OverAllTotalNumberOfMeals}}</h5>
                </div>
                <div class="control-group">
                    <h5>Total Orders Price : {{Orders.OverAllTotalPrice}}</h5>
                </div>
                <div class="control-group">
                    <h5>Meals Distrubition : </h5>
                    <svg id="barChart"></svg>
                </div>
            </div>
        </div>
    </div>
</div>

