
<div class="module">
    <div class="module-head">
        <form class="form-horizontal row-fluid" ng-submit="addMeal()">

            <div class="span4">
                <div class="control-group">
                    <label class="control-label" for="basicinput">Name</label>
                    <div class="controls">
                        <input id="Name" type="text" ng-model="mealForm.Name" placeholder="Meal Name" required />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="basicinput">Price</label>
                    <div class="controls">
                        <input id="Price" type="number" ng-model="mealForm.Price" placeholder="Meal Price" required />
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="basicinput">Description</label>
                    <div class="controls">
                        <input id="Description" type="text" ng-model="mealForm.Description" placeholder="Meal Description" required />
                    </div>
                </div>


                <div class="control-group">
                    <label class="control-label" for="basicinput">Category</label>
                    <div class="controls">
                        <select @*tabindex="1"*@ ng-model="mealForm.Category_Id" data-placeholder="select meal Category" class="span8" @*required*@>
                            <option value="0" selected>select meal Category here..</option>
                            @foreach (var item in ViewBag.Categories)
                            {
                                <option value=@item.Id>@item.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-primary right">Save</button>

                    </div>
                </div>
            </div>
            <div class="span4 align-right bottom-right">
                <input id="imgInp" type="file" name="file" onchange="angular.element(this).scope().LoadFileData(this.files)" multiple="" accept="image/*">

            </div>

        </form>

        <div ng-if="mealForm.AddMealFailure">
            <h2>we are sorry...something went wrong we are working on it </h2>
        </div>
    </div>
</div>
